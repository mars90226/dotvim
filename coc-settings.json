{
  "suggest.timeout": 1000,
  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    },
    "crystal": {
      "command": "crystalline",
      "args": [
        "--stdio"
      ],
      "filetypes": [
        "crystal"
      ]
    }
  },
  "coc.preferences.useQuickfixForLocations": false,
  "coc.source.neosnippet.disableSyntaxes": ["string", "comment"],
  "suggest.acceptSuggestionOnCommitCharacter": true,
  "codeLens.enable": false,
  "python.linting.pylintEnabled": false,
  "list.insertMappings": {
    "<A-j>": "feedkeys:<C-f>",
    "<A-k>": "feedkeys:<C-b>",
    "<A-s>": "do:switch",
    "<C-s>": "action:split",
    "<C-t>": "action:tabe",
    "<C-v>": "action:vsplit",
    "<A-r>": "eval:@@"
  },
  "list.normalMappings": {
    "v": "action:vsplit"
  },
  "git.virtualTextPrefix": "  ",
  "vimlsp.indexes.runtimepath": true,
  "vimlsp.suggest.fromRuntimepath": true,
  "Lua.diagnostics.globals": ["vim"]
}
