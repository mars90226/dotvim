{
  "suggest.timeout": 1000,
  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    },
    "lua": {
      "command": "lua-lsp",
      "filetypes": ["lua"]
    }
  },
  "coc.preferences.useQuickfixForLocations": true,
  "coc.source.neosnippet.disableSyntaxes": ["string", "comment"],
  "suggest.acceptSuggestionOnCommitCharacter": true,
  "python.linting.pylintEnabled": true,
  "list.insertMappings": {
    "<A-j>": "feedkeys:<C-f>",
    "<A-k>": "feedkeys:<C-b>",
    "<A-s>": "do:switch",
    "<C-s>": "action:split",
    "<C-t>": "action:tabe",
    "<C-v>": "action:vsplit"
  },
  "git.enableGutters": false,
  "git.addGBlameToVirtualText": true,
  "git.virtualTextPrefix": "  ",
  "vimlsp.indexes.runtimepath": false,
  "vimlsp.suggest.fromRuntimepath": false
}
